	FILLRECT 1+percent*(screenx-2), screeny/2-fnty, screenx-1, screeny/2+fnty, RGB(0,0,255)
	PRINT INTEGER(percent*100), screenx/2-fntx*2, screeny/2+fnty
	SHOWSCREEN
